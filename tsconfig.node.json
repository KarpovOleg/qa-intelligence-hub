{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"], // DOM needed for locator types
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["vite.config.ts", "playwright.config.ts"]
}
